{
  "name": "bach-openfda",
  "version": "1.0.0",
  "description": "MCP server for OpenFDA Drug Label API - enables AI agents to query FDA drug information",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "start:http": "node dist/http.js",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/http.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "openfda",
    "drug",
    "fda",
    "api",
    "medical",
    "pharmaceutical"
  ],
  "author": "bachstudio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rongquanfeng/mcp-openfda.git"
  },
  "bugs": {
    "url": "https://github.com/rongquanfeng/mcp-openfda/issues"
  },
  "homepage": "https://github.com/rongquanfeng/mcp-openfda#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.2.0",
    "zod": "^3.22.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "bach-openfda": "./dist/index.js"
  }
